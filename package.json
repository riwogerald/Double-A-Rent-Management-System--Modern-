{
  "name": "property-management-system",
  "version": "1.0.0",
  "description": "Modern Property Management System - Modernized from VB6",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client": "vite",
    "server": "nodemon server/index.cjs",
    "build": "tsc && vite build",
    "build:client": "vite build",
    "build:server": "echo 'Server build complete'",
    "start": "node server/index.cjs",
    "start:client": "vite preview",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "deploy": "npm run build && npm run start",
    "setup-db": "node setup_sqlite_db.cjs",
    "setup-db:mysql": "node setup_portfolio_db.js",
    "portfolio-setup": "npm run setup-db && echo Portfolio database ready! Run npm run dev to start the application"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.0",
    "@supabase/supabase-js": "^2.52.1",
    "@tanstack/react-query": "^5.17.15",
    "@types/jspdf": "^1.3.3",
    "axios": "^1.6.5",
    "better-sqlite3": "^12.2.0",
    "chart.js": "^4.5.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.526.0",
    "react": "^19.1.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.49.2",
    "react-router-dom": "^7.7.1",
    "recharts": "^3.1.0",
    "sqlite3": "^5.1.7",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "bcryptjs": "^3.0.2",
    "concurrently": "^9.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.5",
    "nodemon": "^3.0.2",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^7.0.6"
  }
}
